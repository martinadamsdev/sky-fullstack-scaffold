# Shalom Monorepo Environment Variables
# Copy this file to .env and fill in the values

# ==============================================
# Global Configuration
# ==============================================

# Node Environment
NODE_ENV=development

# ==============================================
# API Service (apps/api) - Port 3000
# ==============================================

# Server Configuration
API_PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shalom

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Better Auth
AUTH_SECRET=your-random-secret-key-change-this-in-production
AUTH_URL=http://localhost:3000
AUTH_TRUSTED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003

# Email (for Better Auth)
EMAIL_FROM=noreply@shalom.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# JWT
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003

# OpenTelemetry (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=shalom-api

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ==============================================
# Web Frontend (apps/web) - Port 3001
# ==============================================

NEXT_PUBLIC_WEB_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Shalom

# ==============================================
# Admin Dashboard (apps/admin) - Port 3002
# ==============================================

NEXT_PUBLIC_ADMIN_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Shalom Admin

# ==============================================
# Mobile H5 (apps/mobile) - Port 3003
# ==============================================

NEXT_PUBLIC_MOBILE_URL=http://localhost:3003
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Shalom Mobile

# ==============================================
# MiniProgram (apps/miniprogram)
# ==============================================

# WeChat MiniProgram AppID
WECHAT_APPID=
WECHAT_APPSECRET=
